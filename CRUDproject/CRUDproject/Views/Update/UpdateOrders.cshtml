@model CRUDproject.ViewModels.UpdateViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @using (Html.BeginForm("UpdateOrders", "Update", FormMethod.Post))
        {
        <table id="SearchWhere" style="border:none;">
            <tr>
                <td style="border:none;">
                    <label for="OrderID">訂單編號</label>
                    <input type="text" class="form-control" id="OrderID" name="OrderID" value="@Model.OrderID" />
                    <label for="OrderDate">訂單日期</label>
                    <input type="text" class="form-control" id="OrderDate" name="OrderDate" value="@Model.OrderDays.ToString("yyyyMMdd")" />
                    <label for="RequiredDate">需求日期</label>
                    <input type="text" class="form-control" id="RequiredDate" name="RequiredDate" value="@Model.RequiredDays.ToString("yyyyMMdd")" />
                    <label for="CustomerName">公司名稱</label>
                    <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName" />
                    <label for="CustomerContractName">公司聯絡人名稱</label>
                    <input type="text" class="form-control" id="CustomerContractName" name="CustomerContractName" value="@Model.CustomerContractName" />
                    <input type="hidden" id="CustomerID" name="CustomerID" value="@Model.CustomerID"/>
                    <input class="btn btn-primary" type="submit" id="UpdateOrders" value="修改" />
                </td>
            </tr>
        </table>
        }
    </div>
    <script>
        $(function () {
            $('#OrderDate').datepicker({
                dateFormat: 'yymmdd',
                changeYear: true,
                changeMonth: true,
                defaultDate: new Date("1996-01-01"),
            });
            $('#RequiredDate').datepicker({
                dateFormat: 'yymmdd',
                changeYear: true,
                changeMonth: true,
                defaultDate: new Date("1997-01-01"),

            });
        });
    </script>
</body>
</html>
